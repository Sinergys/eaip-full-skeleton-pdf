# Production Environment Variables для EAIP
# Скопируйте этот файл в .env.prod и заполните реальными значениями

# Версия образов
EAIP_VERSION=v0.3.0

# PostgreSQL
POSTGRES_USER=eaip_prod_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=eaip_prod
POSTGRES_HOST=postgres

# Redis
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# MinIO
MINIO_ROOT_USER=eaip_minio_admin
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_MINIO_PASSWORD
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}

# JWT Secret (обязательно изменить!)
SECRET_KEY=CHANGE_ME_VERY_STRONG_SECRET_KEY_FOR_JWT_AT_LEAST_32_CHARS

# API Keys (если используются внешние сервисы)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# DEEPSEEK_API_KEY=sk-...

# AI Configuration (опционально)
AI_PROVIDER=deepseek
AI_ENABLED=false

# Application URLs
DOMAIN=your-domain.com
API_BASE_URL=https://${DOMAIN}/api
WEB_BASE_URL=https://${DOMAIN}

# CORS (для продакшна указывайте конкретные домены!)
ALLOWED_ORIGINS=https://${DOMAIN},https://www.${DOMAIN}
ALLOWED_HOSTS=${DOMAIN},www.${DOMAIN}

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# File Upload
MAX_FILE_SIZE=52428800
INBOX_DIR=/data/inbox
AGGREGATED_DIR=/data/aggregated

# Security
DEBUG=false
ALLOW_HTTP=false

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

