{
  "dashboard": {
    "title": "EAIP Services Overview",
    "tags": ["eaip", "services"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "probe_success{job=\"blackbox-http\"}",
            "refId": "A",
            "legendFormat": "{{service}}"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}, "1": {"text": "UP", "color": "green"}}}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [{"value": 0, "color": "red"}, {"value": 1, "color": "green"}]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Container CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"infra-.*\"}[5m]) * 100",
            "refId": "A",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Container Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"infra-.*\"} / 1024 / 1024",
            "refId": "A",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      }
    ]
  }
}

